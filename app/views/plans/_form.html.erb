<%= f.text_field :advertiser_name %>

<h2>Buys</h2>
<ul>
<% f.fields_for(:buys) do |b| %>
  <li>
    <fieldset>
      <legend>
        <% if b.object.new_record? %>
        Create Buy
        <% else %>
        Update Buy
        <% end %>
      </legend>
      <%= render :partial => "buys/form", :locals => { :f => b } %>
    </fieldset>
  </li>
<% end %>

<!-- build a new buy -->
<% f.fields_for(:buys, f.object.buys.build) do |b| %>
  <li>
    <fieldset>
      <legend>
        <% if b.object.new_record? %>
        Create Buy
        <% else %>
        Update Buy
        <% end %>
      </legend>
      <%= render :partial => "buys/form", :locals => { :f => b } %>
      <%= link_to_remote "Add New Buy", :url => { :action => "add_buy" }, :with => 'form_contents()' %>
    </fieldset>
  </li>
<% end %>
</ul>
